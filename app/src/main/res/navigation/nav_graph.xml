<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/startScreen">

    <fragment
        android:id="@+id/startScreen"
        android:name="com.willowtreeapps.namegame.store.StartFragment"
        android:label="StartFragment"
        tools:layout="@layout/content_main" >
        <action
            android:id="@+id/action_startScreen_to_questionScreen"
            app:destination="@id/questionScreen" />
    </fragment>

    <fragment
        android:id="@+id/questionScreen"
        android:name="com.willowtreeapps.namegame.store.QuestionFragment"
        android:label="QuestionFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        tools:layout="@layout/fragment_question"/>

</navigation>